<!DOCTYPE html>
<html lang="de">
<%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/admin.css">

    <body>
        <%- include("./partials/header") %>
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header border-bottom-0 pb-0">
                        <nav>
                            <ul class="nav nav-tabs">
                                <li class="nav-item dropdown">
                                    <button class="nav-link dropdown-toggle active" data-toggle="dropdown">User</button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item active" data-toggle="tab"
                                            href="#edit-user">Verändern</a>
                                        <a class="dropdown-item" data-toggle="tab" href="#delete-user">Löschen</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <button class="nav-link dropdown-toggle" data-toggle="dropdown">QR-Code</button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" data-toggle="tab" href="#create-qrcode">Erstellen</a>
                                        <a class="dropdown-item" data-toggle="tab" href="#edit-qrcode">Verändern</a>
                                        <a class="dropdown-item" data-toggle="tab" href="#delete-qrcode">Löschen</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <button class="nav-link" href="#old" data-toggle="tab">Old</button>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane fade active show" id="edit-user" role="tabpanel" aria-labelledby="edit-user-tab">
                                <%- include("./partials/admin/edit-user-tab") %>
                            </div>
                            <div class="tab-pane fade" id="delete-user" role="tabpanel"
                                aria-labelledby="delete-user-tab">Delete User</div>
                            <div class="tab-pane fade" id="create-qrcode" role="tabpanel"
                                aria-labelledby="create-qrcode-tab">Create QR-Code</div>
                            <div class="tab-pane fade" id="edit-qrcode" role="tabpanel"
                                aria-labelledby="edit-qrcode-tab">Edit QR-Code</div>
                            <div class="tab-pane fade" id="delete-qrcode" role="tabpanel"
                                aria-labelledby="delete-qrcode-tab">Delete QR-Code</div>
                            <div class="tab-pane fade" id="old">
                                <%- include("./partials/admin/old") %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </body>

</html>