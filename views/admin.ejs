<!DOCTYPE html>
<html lang="de">
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <form action="/admin/clear" method="POST">
                                <label for="clear">Alle Verbindungen zwischen QR-Codes und Usern löschen:</label>
                                <button id="clear" type="submit">Löschen</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <form action="/admin/clear-one" method="POST">
                                Verbindungen eines Users mit allen seinen QR-Codes löschen:
                                <input type="text" name="username" placeholder="@username">
                                <button type="submit">Löschen</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <form action="/admin/create-qrcodes" method="POST">
                                <label for="nQrcodes">QR-Codes generieren:</label>
                                <input type="text" placeholder="Anzahl" name="nQrcodes">
                                <button type="submit">Generieren</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <form action="/admin/delete-qrcodes" method="POST">
                                <label for="delete">Alle QR-Codes löschen:</label>
                                <button id="delete" type="submit">Löschen</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    <script>
        let cols = document.getElementsByClassName("col")
        for (let col of cols) {
            col.classList.add("my-1")
        }

        let buttons = document.getElementsByTagName("button")
        for (let button of buttons) {
            button.classList.add("btn")
            button.classList.add("btn-dark")
        }
    </script>

</html>