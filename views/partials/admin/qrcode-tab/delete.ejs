<div class="row mb-2">
    <div class="col">
        <label for="delete-qrcode-form">Alle QR-Codes in Verbindung mit einem bestimmten User löschen oder die Verbindung trennen</label>
        <div class="input-group" id="delete-qrcode-form">
            <div class="input-group-prepend">
                <div class="input-group-text">@</div>
            </div>
            <input type="text" class="form-control" id="delete-qrcode-input" placeholder="username" name="username">
            <div class="input-group-append">
                <button class="btn btn-custom-warning"
                    onclick="clearConnections(document.getElementById('delete-qrcode-input').value)">Trennen</button>
            </div>
            <div class="input-group-append">
                <button class="btn btn-custom-danger"
                    onclick="deleteQrcodes(document.getElementById('delete-qrcode-input').value)">Löschen</button>
            </div>
        </div>
    </div>
    
    <script>
        function clearConnections(username = undefined) {
            console.log("clearConnection", username)
            fetch("/admin/clear-connections", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    "username": username
                }),
            })
            .then(response => console.log(response))
        }

        function deleteQrcodes(username = undefined) {
            console.log("deleteQrcodes", username)
            fetch("/admin/delete-qrcodes", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    "username": username
                }),
            })
            .then(response => console.log(response))
        }
    </script>
</div>

<div class="row mb-2">
    <div class="col">
        <label for="delete-qrcode-form">Alle QR-Codes in der Datenbank löschen oder die Verbindung zu den Usern trennen</label>
        <br>
        <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-custom-warning" onclick="clearConnections()">Trennen</button>
            <button type="button" class="btn btn-custom-danger" onclick="deleteQrcodes()">Löschen</button>
        </div>
    </div>
</div>